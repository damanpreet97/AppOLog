<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/app_label"
        android:fontFamily="sans-serif-condensed"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="100dp"/>

    <!--<TextView-->
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        <!--android:text="Proceed to Login"/>-->

    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/loginButtonBack"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_arrow_back_white_24dp"/>

        <ImageButton
            android:id="@+id/loginButtonProceed"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_enter_filled_50dp"/>

        <TextView
            android:id="@+id/loginTvBack"
            android:layout_below="@+id/loginButtonBack"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="66dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/loginTvProceed"
            android:layout_below="@+id/loginButtonBack"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:textColor="@color/black"
            android:text="Login"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>